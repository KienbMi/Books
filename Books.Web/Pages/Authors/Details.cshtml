@page
@model DetailsModel

@{
  ViewData["Title"] = "Details";
}

<h1>@Model.AuthorInfo.Author</h1>

<h4>Bücher:</h4>
<table class="table">
  <thead>
    <tr>
      <th>
        Titel
      </th>
      <th>
        Isbn
      </th>
      <th>
        Verlag
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var book in Model.AuthorInfo.Books)
    {
        <tr>
            <td>
                @Html.DisplayFor(_ => book.Title)
            </td>
            <td>
                @Html.DisplayFor(_ => book.Isbn)
            </td>
            <td>
                @Html.DisplayFor(_ => book.Publishers)
            </td>
        </tr>
    }
</table>
<div>
  <a asp-page="../Index">Zurück zur Liste</a>
</div>
